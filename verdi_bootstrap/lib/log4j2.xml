<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG">
 	<Appenders>
		<File name="MainLog" fileName="${env:VERDI_USER}/verdi/verdi.log">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
		</File>
	</Appenders>
	<Loggers>
		<Root level="DEBUG">
			<AppenderRef ref="MainLog"/>
		</Root>
	</Loggers>
</Configuration>
